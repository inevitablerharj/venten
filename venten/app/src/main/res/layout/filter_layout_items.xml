<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="filter"
            type="com.venten.venten.model.data.FilterResponseModel"/>

        <variable
            name="listener"
            type="com.venten.venten.view.interfaces.FilterClickListener"/>
    </data>
    <RelativeLayout
        android:layout_margin="8dp"
        android:background="@drawable/items_background"
        android:padding="10dp"
        android:onClick="@{listener::onFilterClicked}"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/filterId"
            android:text="@{String.valueOf(filter.id)}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(filter.startYear) + `-` + String.valueOf(filter.endYear)}"
            android:id="@+id/year"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/year"
            android:id="@+id/country"
            android:text="@{filter.getElements(filter.countries)}"
            android:textSize="@dimen/sp13"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@{filter.gender.toUpperCase()}"
            android:layout_marginTop="5dp"
            android:id="@+id/gender"
            android:textSize="@dimen/sp13"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/country"
            android:id="@+id/color"
            android:text="@{filter.getElements(filter.colors)}"
            android:textSize="@dimen/sp13"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"/>

    </RelativeLayout>
</layout>
